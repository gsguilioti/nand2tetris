/**
 * A 16-bit counter.
 * if      reset(t): out(t+1) = 0
 * else if load(t):  out(t+1) = in(t)
 * else if inc(t):   out(t+1) = out(t) + 1
 * else              out(t+1) = out(t)
 */
CHIP PC {
    IN in[16], reset, load, inc;
    OUT out[16];
    
    PARTS:
    Inc16(in= output, out= incd);
    Mux16(a= output, b= incd, sel= inc, out= o1);
    Mux16(a= o1, b= in, sel= load, out= o2);
    Mux16(a= o2, b= false, sel= reset, out= input);

    Register(in= input, load= true, out= output, out=out);
}